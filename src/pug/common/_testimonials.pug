mixin testimonials-item
  // Testimonial item
  article.testimonials__item.testimonial
    .testimonial__img
      img(src="http://lorempixel.com/80/80/people/", alt="Avatar")
    h4.testimonial__name Salam Halem
    .testimonial__job Marketing SEO
    .testimonial__raiting
      .raiting
        span.raiting__star
          +icon('star')
        span.raiting__star
          +icon('star')
        span.raiting__star
          +icon('star')
        span.raiting__star.raiting__star--half
          +icon('star-half')
        span.raiting__star.raiting__star--empty
          +icon('star-empty')
      .raiting
        +svg('star', 18, 18).symbol-star
        +svg('star', 18, 18).symbol-star
        +svg('star', 18, 18).symbol-star
        +svg('star-half', 18, 18).symbol-star
        +svg('star-empty', 18, 18).symbol-star
    .testimonial__descr
      p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Itaque sunt error adipisci rem tempora suscipit repellat deleniti fugit. Atque, et.
  // End Testimonial item

// Testimonials
section.testimonials
  h2.testimonials__title [Testimonials Title]
  .testimonials__list
    +testimonials-item
    +testimonials-item
    +testimonials-item
    +testimonials-item
    +testimonials-item
// End Testimonials