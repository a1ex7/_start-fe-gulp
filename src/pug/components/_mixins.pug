//- Mixins

//- Symbol mode sprite
mixin svg(title, width, height)
  svg(class=`symbol-${title}`, width=width, height=height)&attributes(attributes)
    use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href=`#${title}`)

//- View mode sprite
mixin icon(title)
  img(src=`img/sprites/sprite.svg#${title}`, alt=`${title}`)&attributes(attributes)

//- WebP Picture
mixin picture(src)
  picture
    source(srcset=`img/${src}.webp`, type="image/webp")
    img(src=`img/${src}.${ext || 'jpg'}`, alt= alt)&attributes(attributes)
//- Usage:  +picture("filename", alt="Picture", ext="png").block__picture


//- Form controls
mixin checkbox(text, checked)
  label
    input(type="checkbox", checked=checked)
    span= text

mixin checkbox-id(text, id, checked)
  input(type="checkbox", id=id, checked=checked)
  label(for=id)= text

//- Sample
mixin deals(description, image)
  .deals__item
    a.deals__link(href="#")
      .deals__image
        img(src=`img/${image}`, alt="Проекти")
      p.deals__descr= description